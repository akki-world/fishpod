<h2 class="py-3 pl-3">POSTS</h2>
<% if user_signed_in? %>
  <p><%= link_to "new post", new_post_path %></p>
<% end %>

<div class="container">
  <div class="row photos">
    <% @posts.each do |post| %>
      <div class="col-4">
        <div class="photo">
          <%= link_to image_tag(post.image.to_s), post_path(post) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
