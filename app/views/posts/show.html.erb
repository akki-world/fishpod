<h1>Posts#show</h1>
<p><%= image_tag(@post.image.to_s) %></p>
<p><%= @post.user.name %></p>
<p><%= @post.size %></p>
<p><%= @post.lure %></p>
<p><%= @post.comment %></p>
<p>post_date：<%= @post.created_at %></p>

<% if current_user == @post.user %>
  <p><%= link_to "edit", edit_post_path(@post) %></p>
  <p><%= link_to "destyroy", @post, method: :delete, data: { confirm: "削除してもよろしいですか?" } %></p>
<% end %>


