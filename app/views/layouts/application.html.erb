<!DOCTYPE html>
<html>
  <head>
    <title>Fishpod</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
    <header>
      <div id="nav-drawer">
        <input id="nav-input" type="checkbox" class="nav-unshown">
        <label id="nav-open" for="nav-input"><span></span></label>
        <label class="nav-unshown" id="nav-close" for="nav-input"></label>
        <div class="pt-5" id="nav-content">
          <ul>
            <% if user_signed_in? %>
            <li class="mt-3"><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
            <% else %>
            <li class="mt-3"><%= link_to "login", new_user_session_path %></li>
            <% end %>
            <li class="mt-3"><%= link_to "index", posts_path %></li>
            <li class="mt-3"><%= link_to "about", "#" %></li>
            <li class="mt-3"><%= link_to "information", "#" %></li>
          </ul>
        </div>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
