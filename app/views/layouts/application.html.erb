<!DOCTYPE html>
<html>
  <head>
    <title>Fishpod</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Permanent+Marker">
    <link href="https://fonts.googleapis.com/css?family=Fredericka+the+Great&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
    <header>
      <div id="nav-drawer">
          <input id="nav-input" type="checkbox" class="nav-unshown">
          <label id="nav-open" for="nav-input"><span></span></label>
          <label class="nav-unshown" id="nav-close" for="nav-input"></label>
          <div class="pt-5" id="nav-content">
            <ul>
              <% if user_signed_in? %>
              <li><%= link_to "new post", new_post_path %></li>
              <li class="mt-3"><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
              <% else %>
              <li class="mt-3"><%= link_to "login", new_user_session_path %></li>
              <% end %>
              <li class="mt-3"><%= link_to "posts", posts_path %></li>
              <li class="mt-3"><%= link_to "about", "#" %></li>
              <li class="mt-3"><%= link_to "information", "#" %></li>
            </ul>
          </div> 
        </div>
    </header>
    <%= yield %>
    <footer>
      <% unless controller.controller_name == "sessions" %>
        <div class="foot-img mt-3">
          <div class="foot-text mt-5">producted by a.nakashima</div>
        </div>
      <% end %>
    </footer>
  </body>
</html>
